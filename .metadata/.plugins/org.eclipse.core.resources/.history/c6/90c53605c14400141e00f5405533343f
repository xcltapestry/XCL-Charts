package org.xclcharts.renderer.info;

import android.graphics.Canvas;

public class LegendRender extends Legend{
	
	public LegendRender()
	{
		super();
	}
	
	public void setPlotWH(float width,float height)
	{
		
		mCenterXY.x = width * mXPercentage;
		mCenterXY.y = height * mYPercentage;
		
		//mXPercentage = xPercentage;
		//mYPercentage = yPercentage;
	}

	public void renderInfo(Canvas canvas) 
	{
		drawInfo(canvas);
	}
	
}
